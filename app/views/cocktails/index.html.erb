<div class="text-center">
  <p id="notice"><%= notice %></p>
  <h1>List of Cocktails</h1>
</div>

<div class="text-center">
  <table class="table table-hover">
    <thead class="hidden">
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= link_to 'Show', cocktail, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-success" %>
</div>
