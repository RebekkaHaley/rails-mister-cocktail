<div class="text-center">
  <p id="notice"><%= notice %></p>
  <h1>Welcome to MisterCocktail</h1>
</div>

<div class="text-center">
  <%= link_to 'Add a cocktail', new_cocktail_path, class: "btn btn-success" %>
</div>

<div class="text-center">
  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <% if cocktail.photo? %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>');">
        <% else %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://static.pexels.com/photos/4295/black-and-white-alcohol-bar-drinks.jpg');">
        <% end %>
            <div class="card-category">Cocktail</div>
            <div class="card-description"><h2><%= cocktail.name %></h2></div>
            <%= link_to 'Show', cocktail, class: "card-link" %>
          </div>
      </div>
      <% end %>

    </div>
  </div>
</div>
