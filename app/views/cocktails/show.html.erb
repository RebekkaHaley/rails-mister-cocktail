<div class="text-center">
  <p id="notice"><%= notice %></p>
</div>

<div>
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://kitt.lewagon.com/placeholder/cities/berlin');">
    <div class="banner-content">
      <h2><%= @cocktail.name %></h2>
    </div>
  </div>
</div>

<div class="text-center">
  <p>
  <p><strong>Recipe:</strong></p>
    <% @cocktail.doses.each do |dose| %>
    <p>
      <%= dose.description %> of <%= dose.ingredient.name %>
      <%= link_to 'Delete', dose_path(id: dose.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-warning" %>
    </p>
    <% end %>
  </p>
</div>

<div class="text-center">
  <%= link_to 'Add a dose', new_cocktail_dose_path(cocktail_id: @cocktail.id), class: "btn btn-success" %>
  <%= link_to 'Back to Index', cocktails_path, class: "btn btn-primary" %>
</div>
