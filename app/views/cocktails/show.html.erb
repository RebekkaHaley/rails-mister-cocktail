<div class="text-center">
  <p id="notice"><%= notice %></p>
</div>

<div class="text-center">
  <h2>
    <strong>Name:</strong>
    <%= @cocktail.name %>
  </h2>
</div>

<div class="text-center">
  <p>
    <% @cocktail.doses.each do |dose| %>
    <p> <%= dose.description %> of <%= dose.ingredient.name %></p>
    <% end %>
  </p>
</div>

<div class="text-center">
  <%= link_to "View index of doses", cocktail_doses_path(@cocktail), class: "btn btn-primary" %>
  <%= link_to 'Back to index of cocktails', cocktails_path, class: "btn btn-primary" %>
</div>
